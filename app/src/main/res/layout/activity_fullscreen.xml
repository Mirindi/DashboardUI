<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="team8.personaltransportation.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="left|bottom">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dummy_button" />




        </LinearLayout>

        <ImageView
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:layout_marginBottom="25dp"
            android:id="@+id/batteryLife"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/battery95" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="5dp"
            android:id="@+id/leftTurn"
            android:layout_gravity="left|top"
            android:src="@drawable/leftTurnSignal" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginRight="135dp"
            android:layout_marginTop="5dp"
            android:id="@+id/rightTurn"
            android:layout_gravity="right|top"
            android:src="@drawable/rightTurnSignal" />

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="135dp"
            android:id="@+id/wipers"
            android:layout_gravity="left|bottom"
            android:src="@drawable/wipers1" />

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="135dp"
            android:src="@drawable/defrost"
            android:layout_gravity="right|bottom" />

        <ImageView
            android:layout_width="240dp"
            android:layout_height="600dp"
            android:layout_marginRight="645dp"
            android:layout_marginBottom="125dp"
            android:id="@+id/speedL"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/zero" />
        <ImageView
            android:layout_width="240dp"
            android:layout_height="600dp"
            android:layout_marginRight="395dp"
            android:layout_marginBottom="125dp"
            android:id="@+id/speedR"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/zero" />
        <ImageButton
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="135dp"
            android:layout_marginEnd="135dp"
            android:id="@+id/warning"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/warningOn" />

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="135dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/headlampOff"
            android:layout_gravity="left|center_vertical" />

    </FrameLayout>

</FrameLayout>
